<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/policy_icon"
        android:layout_width="@dimen/policy_icon_width"
        android:layout_height="@dimen/policy_icon_height"
        android:src="@mipmap/icon_document"
        android:layout_marginTop="@dimen/policy_icon_margin_top"
        android:layout_marginBottom="@dimen/policy_icon_margin_bottom"
        android:layout_marginRight="@dimen/policy_icon_margin_right"
        android:layout_marginLeft="@dimen/policy_icon_margin_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/liferay_list_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="normal"
            android:layout_marginTop="@dimen/policy_item_title_margin_top"
            android:layout_marginBottom="@dimen/policy_item_title_margin_bottom"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/policy_item_line_height"
            android:background="@color/policy_item_line_color"/>

    </LinearLayout>

</LinearLayout>